{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "parser": "json",
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": [".prettierrc", ".prettierrc.json"],
      "options": { "parser": "json" }
    }
  ]
}
